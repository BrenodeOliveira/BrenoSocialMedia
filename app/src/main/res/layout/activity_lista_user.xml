    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/breninhoooooooooo"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/btnTenteNovamente"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTenteNovamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tente_novamente"
        app:layout_constraintLeft_toLeftOf="@id/txt_name"
        app:layout_constraintRight_toRightOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/txt_name" />

    <Button
        android:id="@+id/btnToastNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/nome"
        app:layout_constraintLeft_toLeftOf="@id/txt_name"
        app:layout_constraintRight_toRightOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/btnTenteNovamente" />

</androidx.constraintlayout.widget.ConstraintLayout>